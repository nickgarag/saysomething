<!doctype html>
<html lang="en">
  {% include "head.j2" %}
  <form action="{{ url_for('home') }}" method="post" name="saysomething">
    {{ form.hidden_tag() }}
    <div class="container">
      <div class="col">
        <div class="col">
          {{ form.author.label }}<br>
          {{ form.author(size=32) }}
        </div>
        <div class="col">
          {{ form.message.label }}<br>
          {{ form.message }}
        </div>
        <div class="col">
          {% with flash_messages = get_flashed_messages() %}
            {% if flash_messages %}
              {% for message in flash_messages %}
                <div class="alert alert-danger" role="alert">
                  {{ message }}
                </div>
              {% endfor %}
            {% endif %}
          {% endwith %}
        </div>
        <div class="col">
          Captcha(required) <br/>
          {{ captcha_html(captcha) }}
        </div>
        <br/>
        <div class="col">
          <input type="submit" class="btn btn-warning" value="Post!">
        </div>
      </div>
    </div>
  </form>
  <br/>
  <div class="container-fluid">
    <ul class="list-group">
      {% for message in messages|reverse %}
        <li class="list-group-item">
          <font size="+1">{{ message.message|e }}</font>
          <br/>
          <i><font size="-1">By 
          {% if message.author|length %}
            {{ message.author|e }}
          {% else %}
            Anonymous
          {% endif %}
          </font>
          <br/>
          <font size="-2">
          {{ message.datetime.strftime('%Y-%m-%d at %H:%M:%S UTC') }}
          </font></i>
        </li>
      {% endfor %}
    </ul>
  </div>
</html>